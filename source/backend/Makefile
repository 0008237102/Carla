# ----------------------------------------------------------------------------------------------------------------------------

all:
# 	$(MAKE) -C control
	$(MAKE) -C engine
	$(MAKE) -C plugin
	$(MAKE) -C standalone

# ----------------------------------------------------------------------------------------------------------------------------

clean:
# 	$(MAKE) clean -C control
	$(MAKE) clean -C engine
	$(MAKE) clean -C plugin
	$(MAKE) clean -C standalone

# ----------------------------------------------------------------------------------------------------------------------------

debug:
	$(MAKE) DEBUG=true

# ----------------------------------------------------------------------------------------------------------------------------

doxygen: CarlaBackend.doxygen
	doxygen $^

# ----------------------------------------------------------------------------------------------------------------------------
