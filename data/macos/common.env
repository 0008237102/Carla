#!/bin/bash

if [ "$(uname -m)" = "arm64" ] || [ "$(uname -r)" = "20.1.0" ]; then
    MACOS_UNIVERSAL=1
else
    MACOS_UNIVERSAL=0
fi

PKG_CONFIG_VERSION=0.28
LIBLO_VERSION=0.30
ZLIB_VERSION=1.2.11
FILE_VERSION=5.34
LIBOGG_VERSION=1.3.4
LIBVORBIS_VERSION=1.3.6
FLAC_VERSION=1.3.2
LIBSNDFILE_VERSION=1.0.28
GLIB_VERSION=2.44.1
GLIB_MVERSION=2.44
FLUIDSYNTH_VERSION=1.1.11
MXML_VERSION=2.12
FFTW3_VERSION=3.3.8
PYTHON_VERSION=3.7.4
PYLIBLO_VERSION=0.9.2

SETUPTOOLS_SCM_VERSION=5.0.0
TOML_VERSION=0.10.2
ZIPP_VERSION=3.4.0
IMPORTLIB_METADATA_VERSION=3.1.1

if [ "${MACOS_UNIVERSAL}" -eq 1 ]; then
    PYTHON_VERSION=3.9.1
    CXFREEZE_VERSION=6.4.2
else
    PYTHON_VERSION=3.7.4
    CXFREEZE_VERSION=6.1
fi

if [ -n "${DEPS_NEW}" ]; then
    QT5_VERSION=5.12.5
    QT5_MVERSION=5.12
    PYQT5_VERSION=5.13.1
